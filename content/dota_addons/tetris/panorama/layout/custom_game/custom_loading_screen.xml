<root>
    <styles>
        <include src="file://{resources}/styles/custom_loading_screen.css" />
    </styles>
    <Panel class="AddonLoadingRoot">
        <Panel class="LoadingScreenContainer">
            <Panel id="LoadingScreenPosition">
                <Image id="LoadingScreen" />
            </Panel>
            <Panel id="TitlePanel" class="text-panel">
                <Label id="AddonTitle" class="label-text" text="#addon_game_name" />
            </Panel>
            <Panel id="DescriptionPanel" class="text-panel">
                <Label html="true" class="label-text" text="#hotkey_up_arrow" />
                <Label html="true" class="label-text" text="#hotkey_z" />
                <Label html="true" class="label-text" text="#hotkey_down_arrow" />
                <Label html="true" class="label-text" text="#hotkey_space" />
                <Label html="true" class="label-text" text="#hotkey_lshift" />
                <Label html="true" class="label-text" text="#hotkey_leftright_arrow" />
            </Panel>
        </Panel>
    </Panel>
</root>